<!--회원가입 페이지!-->
<body style="background-color:#ffffff; overflow:hidden;">  
 <div class="month-graph">
  <div class="sign_up-login-page">
    <div class="sign_up-form">
      <img class="signup_logo" src="/assets/tost_logo.gif" alt="Logo" />
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
    <div class="field">
      닉네임
      <%= f.text_field :username, autocomplete: "off",  :class => 'input', :placeholder => "username" %>
    </div>
    
    <div class="field">
      아이디
     <%= f.email_field :email, autofocus: true, :class => 'input', :placeholder => "e-mail"%>
    </div>
    
    <div class="field">
      비밀번호
      <% if @minimum_password_length %>
      <em>(최소<%= @minimum_password_length %>자 이상)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'input', :placeholder => "password" %>
    </div>

    <div class="field">
      비밀번호확인
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'input', :placeholder => "password_confirm" %>
    </div>
    
    <!--<div class="field">-->
    <!--  토익점수-->
    <!--  <%#= f.text_field :toeic_score, autocomplete: "off", :class => 'input', :placeholder => "TOEIC점수를 입력해주세요(선택)" , required: false %>-->
    <!--</div>-->
    
    <!--<div class="field">-->
    <!--  토플점수-->
    <!--  <%#= f.password_field :password_confirmation, autocomplete: "off", :class => 'input', :placeholder => "password_confirm" %>-->
    <!--</div>-->

    <div class="actions">
      <%= f.submit "가입하기", :class => 'search_submit_btn_signup'%>
    </div>
    
<% end %>
<%= render "devise/shared/links" %>
</div>    
</div>
</div>
</div>
</body>
